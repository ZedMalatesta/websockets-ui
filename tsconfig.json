{
  "compilerOptions": {
    "target": "ES2020",                                  
    "lib": [ "ES6" ],                                    
    "module": "NodeNext",                               
    "rootDir": "./src",                                 
    "resolveJsonModule": true,                       
    "allowJs": true,
    "outDir": "./build",                              
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,                       
    "forceConsistentCasingInFileNames": true,          
    "strict": true, 
    "noImplicitAny": true,                      
    "skipLibCheck": true                                
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "scripts"],
  "lib":["exnext"],
  "ts-node": {
    "esm": true
  }
}
